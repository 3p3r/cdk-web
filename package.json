{
  "name": "cdk-web",
  "version": "1.2.7",
  "homepage": "",
  "description": "AWS CDK in your browser",
  "main": "./dist/cdk-web.js",
  "keywords": [
    "iac",
    "cdk",
    "aws",
    "aws-cdk",
    "webpack",
    "cloudformation"
  ],
  "scripts": {
    "build": "npm-run-all build:webpack build:playground build:postprocess",
    "build:version": "git rev-parse --short HEAD || shx echo unversioned",
    "build:webpack": "webpack --config cdk-web.webpack.config.js",
    "build:playground": "react-scripts build",
    "build:postprocess": "npm-run-all build:postprocess:*",
    "build:postprocess:rename": "shx mv ./build/cdk-web.js ./build/cdk-web-$(npm run -s build:version).js",
    "build:postprocess:replace": "shx sed -i s/cdk-web.js/cdk-web-$(npm run -s build:version).js/g $(shx find ./build/static/js/main.*.js)",
    "test": "jest --runInBand --ci",
    "start": "react-scripts start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3p3r/cdk-web.git"
  },
  "author": "Sepehr Laal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3p3r/cdk-web/issues"
  },
  "devDependencies": {
    "@forevolve/bootstrap-dark": "^2.1.0",
    "@monaco-editor/react": "^4.3.1",
    "aws-cdk-lib": "^2.10.0",
    "bootstrap": "^5.1.3",
    "constructs": "^10.0.52",
    "github-fork-ribbon-css": "^0.2.3",
    "idempotent-babel-polyfill": "^7.4.4",
    "jest": "^27.4.7",
    "jest-puppeteer": "^6.1.0",
    "memfs": "^3.4.1",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^13.1.3",
    "react": "^17.0.2",
    "react-bootstrap": "^2.1.2",
    "react-dom": "^17.0.2",
    "react-loader-spinner": "^5.1.2",
    "react-resize-detector": "^7.0.0",
    "react-scripts": "5.0.0",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "string-replace-loader": "^2.3.0",
    "strip-indent": "^4.0.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "web-vitals": "^2.1.4",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  },
  "jest": {
    "bail": true,
    "verbose": true,
    "preset": "jest-puppeteer",
    "testTimeout": 20000,
    "maxConcurrency": 1,
    "maxWorkers": 1
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
